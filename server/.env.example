NODE_ENV=development
PORT=4000
APP_URL=http://localhost:4000
# For single-service hosting (frontend + API on same domain), this can stay as APP_URL.
# If frontend is hosted separately, set this to your frontend domain.
CORS_ORIGIN=http://localhost:4000

DATABASE_URL=postgresql://postgres:postgres@localhost:5432/barangay

JWT_SECRET=change-this-access-secret
JWT_REFRESH_SECRET=change-this-refresh-secret
JWT_RESET_SECRET=change-this-reset-secret
ACCESS_TOKEN_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN_DAYS=7
RESET_TOKEN_EXPIRES_IN=10m

SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM="Barangay Request System <no-reply@example.com>"
